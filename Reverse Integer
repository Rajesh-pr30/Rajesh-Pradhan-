class Solution {
    public int reverse(int x) {
        long rev=0;
        boolean negative=false;
                if(x<0)
                {
              negative=true;
x=Math.abs(x);
                }
                while(x>0)
        {
            rev=rev*10+x%10;
            x=x/10;

        }
        if(rev > Integer.MAX_VALUE){
            return 0;
        }
        return (int)(negative?-rev:rev);
    }
}
